
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Traversal Kullanıcı Kayıt</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- LINEARICONS -->
	<link rel="stylesheet" href="/colorlib-regform-26/fonts/linearicons/style.css">
	<!-- STYLE CSS -->
	<link rel="stylesheet" href="/colorlib-regform-26/css/style.css">
</head>
<body>
	<div class="wrapper">
		<div class="inner">
			<form method="post">
				<h3>Yeni Hesap Oluşturun</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" name="Name" placeholder="Adınız">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-star"></span>
					<input type="text" class="form-control" name="Surname" placeholder="Soyadınız">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" class="form-control" name="Email" placeholder="Mail Adresiniz">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-phone-handset"></span>
					<input type="text" class="form-control" name="Username" placeholder="Kullanıcı Adınız">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" name="Password" placeholder="Şifreniz">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" name="ConfirmPassword" placeholder="Şifre Tekrar">
				</div>
				<button>
					<span>Kayıt Ol</span>
				</button>
			</form>
		</div>

	</div>

	<script src="/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="/colorlib-regform-26/js/main.js"></script>
</body>
</html>