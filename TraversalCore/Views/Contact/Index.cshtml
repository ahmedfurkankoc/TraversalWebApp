@model SendMessageDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim bilgilerimiz</h5>
                            <p class="mt-3 mb-4">
                                Merhaba, bize 7 gün 24 saat Whatsapp, mail iletişim ağlarımız üzerinden ulaşabilirsiniz.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Mail adresimiz:</h6>
                            <p>
                                <a href="mailto:mail@traversal.com">
                                    mail@traversal.com
                                </a>
                            </p>
                            <h6 class="mt-4">Bİzi Ziyaret Edin:</h6>
                            <p> Cumhuriyet Cad. 19 Mayıs Sok. Kadıköy/İSTANBUL</p>
                            <h6 class="mt-4">Telefon:</h6>
                            <p class="margin-top"><a href="tel:+90-500-300-2010">+90-500-300-2010</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" placeholder="Adınız*" asp-for="Name" class="contact-input" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" placeholder="Email adresiniz*" asp-for="Email" class="contact-input" required="" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Konu*" asp-for="Subject" class="contact-input" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Message" placeholder="Mesajınızı yazın*" required=""></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesajınızı gönderin</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
</section>
<!-- /contact-form -->
