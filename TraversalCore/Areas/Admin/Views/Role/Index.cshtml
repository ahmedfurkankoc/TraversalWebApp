@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}

<div class="d-flex justify-content-between align-itmes-center">
    <h1>Rol Listesi</h1>
    <a href="/Admin/Role/CreateRole" class="btn btn-warning">Yeni</a>
</div>

@if(Model.Count > 0)
{ 
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Rolü Sil</th>
            <th>Rolü Güncelle</th>
        </tr>
     
            @foreach(var item in Model)
            {
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>@item.Name</td>
                    <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
                </tr>
            }    
    </table>
}
else
{
    <h4 class="alert">Herhangi bir rol bulunamadı.</h4>
}