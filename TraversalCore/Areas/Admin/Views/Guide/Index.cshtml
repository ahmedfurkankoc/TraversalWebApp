@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}
<style>
    img {
        border-radius: 50%;
    }
</style>
<div class="d-flex justify-content-between align-items-center">
    <h1>Rehberler</h1>
    <a href="/Admin/Guide/AddGuide" class="btn btn-warning">Yeni Rehber Oluştur</a>
</div>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            @{counter++;}
            <td>@counter</td>
            <td><img src="@item.Image" height="50" width="50"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @if(item.Status == true)
            {
                <td><a href="/Admin/Guide/ChangeStatusPassive/@item.GuideId" class="btn btn-outline-warning">Pasif Yap</a></td>
            } else
            {
                <td><a href="/Admin/Guide/ChangeStatusActive/@item.GuideId" class="btn btn-outline-primary">Aktif Yap</a></td>
            }
            <td><a href="/Admin/Guide/EditGuide" class="btn btn-outline-info">Düzenle</a></td>
        </tr>
    }
</table>