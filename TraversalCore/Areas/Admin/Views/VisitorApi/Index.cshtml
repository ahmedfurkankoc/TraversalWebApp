@model List<VisitorVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Api Ziyaretçi Listesi</h1>
    <a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-warning">Yeni Ziyaretçi Ekle</a>
</div>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.VisitorId</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Email</td>
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId/" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId/" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

