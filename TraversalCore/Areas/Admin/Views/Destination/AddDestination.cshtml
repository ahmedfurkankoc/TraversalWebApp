@model Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Destinasyon Oluştur</h1>

<form method="post">
    <div class="form-group my-4">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Tur Süresi")
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" rows="5" cols="100" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Görsel")
        <input type="text" asp-for="Image" rows="5" cols="100" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Açıklama")
        <input type="text" asp-for="Description" rows="5" cols="100" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" rows="5" cols="100" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="CoverImage" rows="5" cols="100" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="Image2" rows="5" cols="100" class="form-control" />
    </div>
    <div class="form-group my-4">
        @Html.Label("Detay 1")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details1"></textarea>
    </div>
    <div class="form-group my-4">
        @Html.Label("Detay 2")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details2"></textarea>
    </div>
    <br />
    <button class="btn btn-warning">Tur Ekle</button>
</form>